<Window x:Class="CoinPlanner.Start.StartLoadingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoinPlanner.Start"
        mc:Ignorable="d"
        WindowStyle="None"
        Height="326" Width="508"
        MinHeight="326" MinWidth="508"
        MaxHeight="326" MaxWidth="508"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/CoinPlanner.Start;component/Resources/icon32.ico"
        Title="Coin Planner">
    <Grid>

        <Image Source="pack://application:,,,/CoinPlanner.Start;component/Resources/coinplanner96.png" 
               Height="96" 
               Width="96"
               Margin="60"
               HorizontalAlignment="Center" 
               VerticalAlignment="Top"/>

        <TextBlock Text="COIN PLANNER"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Bottom"
                   Margin="80"
                   FontSize="32"
                   FontWeight="ExtraLight"
                   FontFamily="Courier New"/>

        <ProgressBar x:Name="StartProgressBar"
                     Width="508"
                     Height="24"
                     Minimum="0"
                     Maximum="100"
                     Value="0"
                     IsIndeterminate="False"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Bottom"
                     Foreground="#1D83D4"/>
    </Grid>
</Window>
