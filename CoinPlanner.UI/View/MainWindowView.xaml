<Window x:Class="CoinPlanner.UI.View.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoinPlanner.UI.View"
        xmlns:control="clr-namespace:CoinPlanner.UI.View.Controls"
        mc:Ignorable="d"
        Title="Coin Planner" 
        Height="1080" Width="1920"
        MinHeight="450" MinWidth="800"
        Background="#FFCDD0D2"
        UseLayoutRounding="True"
        Icon="pack://application:,,,/CoinPlanner.UI;component/Resources/icon32.ico">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Grid Grid.Row="0">
            <control:PanelControl VerticalAlignment="Top" Height="170"/>
        </Grid>

            
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Нижняя левая панель -->
            <Grid Grid.Column="0">
                <control:CalendarControl/>
            </Grid>


            <!-- Нижняя правая панель -->
            <Grid Grid.Column="1">
                <control:ContentControl/>
            </Grid>
        </Grid>
    </Grid>
</Window>
