<Window x:Class="CoinPlanner.UI.View.Dialogs.RenamePlanDialogs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoinPlanner.UI.View.Dialogs"
        mc:Ignorable="d"
        d:DesignHeight="220" d:DesignWidth="420"
        Height="220" Width="420"
        MaxHeight="220" MaxWidth="420"
        MinHeight="220" MinWidth="420"
        Title="Coin Planner" 
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/CoinPlanner.UI;component/Resources/icon32.ico">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/CoinPlanner.UI;component/Styles/PanelStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/CoinPlanner.UI;component/Styles/TypeStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock Text="Выберите план из имеющегося списка, который необходимо переименовать:"
                       TextWrapping="Wrap"
                       Margin="15,5,5,5"
                       FontSize="15"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <TextBlock Text="План из списка: "
                           TextWrapping="Wrap"
                           Margin="15,5,0,5"
                           FontSize="15"/>
                <ComboBox x:Name="MyComboBox"
                          Height="25"
                          Width="200"
                          Margin="0"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          ItemsSource="{Binding DataContext.Items, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:RenamePlanDialogs}}"
                          SelectedItem="{Binding DataContext.SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:RenamePlanDialogs}}"
                          Style="{StaticResource TypeComboBoxStyle}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="1">
                <TextBlock Text="Новое имя для плана: "
                           TextWrapping="Wrap"
                           Margin="15,5,0,5"
                           FontSize="15"/>
                <TextBox Text="{Binding DataContext.InputName, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:RenamePlanDialogs}}"
                         Width="200"
                         TextWrapping="Wrap"
                         Margin="15,5,0,5"
                         FontSize="15"/>
            </StackPanel>
        </Grid>

        
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Button Content="Ок" 
                    Height="30" 
                    Width="70"
                    HorizontalAlignment="Left"
                    Margin="10,10,0,0"
                    FontSize="15"
                    BorderThickness="1"
                    BorderBrush="Gray"
                    Command="{Binding DataContext.Ok, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:RenamePlanDialogs}}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window, Mode=FindAncestor}}"
                    Style="{StaticResource PanelButton}"/>
            <Button Content="Отмена" 
                    Height="30" 
                    Width="70"
                    HorizontalAlignment="Right"
                    Margin="0,10,10,0"
                    FontSize="15"
                    BorderThickness="1"
                    BorderBrush="Gray"
                    Command="{Binding DataContext.Cancel, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:RenamePlanDialogs}}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window, Mode=FindAncestor}}"
                    Style="{StaticResource PanelButton}"/>
        </Grid>
    </Grid>
</Window>
