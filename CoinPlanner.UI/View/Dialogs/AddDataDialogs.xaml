<Window x:Class="CoinPlanner.UI.View.Dialogs.AddDataDialogs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoinPlanner.UI.View.Dialogs"
        mc:Ignorable="d"
        d:DesignHeight="330" d:DesignWidth="300"
        Height="330" Width="400"
        MaxWidth="400"
        MinHeight="330" MinWidth="400"
        Title="Coin Planner" 
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/CoinPlanner.UI;component/Resources/icon32.ico">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/CoinPlanner.UI;component/Styles/PanelStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/CoinPlanner.UI;component/Styles/TypeStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock Text="Заполните форму для добавления данных в план:"
                       Margin="15,5,5,5"
                       FontSize="15"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <TextBlock Text="Наименование: "
                           TextWrapping="Wrap"
                           Margin="15,5,0,5"
                           FontSize="15"/>

                <TextBox Text="{Binding DataContext.Name, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:AddDataDialogs}}"
                         Width="210"
                         TextWrapping="Wrap"
                         Margin="15,5,0,5"
                         FontSize="15"/>
            </StackPanel>

            
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <TextBlock Text="Вид операции: "
                           TextWrapping="Wrap"
                           Margin="15,5,0,5"
                           FontSize="15"/>

                <ComboBox Width="210"
                          Margin="20,5,0,5"
                          FontSize="15"
                          ItemsSource="{Binding DataContext.TypeItems, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:AddDataDialogs}}"
                          SelectedItem="{Binding DataContext.TypeSelected, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:AddDataDialogs}}"
                          Style="{StaticResource TypeComboBoxStyle}"/>
            </StackPanel>

            
            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <TextBlock Text="Категория: "
                           TextWrapping="Wrap"
                           Margin="15,5,0,5"
                           FontSize="15"/>

                <ComboBox Width="210"
                          Margin="48,5,0,5"
                          FontSize="15"
                          ItemsSource="{Binding DataContext.CategoryItems, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:AddDataDialogs}}"
                          SelectedItem="{Binding DataContext.CategorySelected, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:AddDataDialogs}}"
                          Style="{StaticResource TypeComboBoxStyle}"/>
            </StackPanel>

            
            <StackPanel Grid.Row="3" Orientation="Horizontal">
                <TextBlock Text="Сумма, руб.: "
                           TextWrapping="Wrap"
                           Margin="15,5,0,5"
                           FontSize="15"/>

                <TextBox Text="{Binding DataContext.Sum, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:AddDataDialogs}}"
                         Width="210"
                         TextWrapping="Wrap"
                         Margin="37,5,0,5"
                         FontSize="15"
                         PreviewTextInput="TextBox_PreviewTextInput"/>
            </StackPanel>

            
            <StackPanel Grid.Row="4" Orientation="Horizontal">
                <TextBlock Text="Выполнен: "
                           TextWrapping="Wrap"
                           Margin="15,5,0,5"
                           FontSize="15"/>

                <CheckBox Content="Данная операция выполнена"
                          IsChecked="{Binding DataContext.Completed, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:AddDataDialogs}}"
                          Width="210" 
                          FontSize="14"
                          Margin="47,9,0,5"/>
            </StackPanel>

            
            <StackPanel Grid.Row="5" Orientation="Horizontal">
                <TextBlock Text="Время: "
                           TextWrapping="Wrap"
                           Margin="15,5,0,5"
                           FontSize="15"/>

                <TextBox Text="{Binding DataContext.Date, StringFormat='{}{0:HH:mm dd-MM-yyyy}', RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:AddDataDialogs}}"
                         Width="210"
                         TextWrapping="Wrap"
                         Margin="75,5,0,5"
                         FontSize="15"
                         ToolTip="Введите дату и время в формате YYYY-MM-DD HH:mm:ss"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Margin="0,10,0,10">
            <Button Content="Ок" 
                    Height="30" 
                    Width="70"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="10,10,0,0"
                    FontSize="15"
                    BorderThickness="1"
                    BorderBrush="Gray"
                    Command="{Binding DataContext.Ok, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:AddDataDialogs}}"
                    Style="{StaticResource PanelButton}"/>
            <Button Content="Отмена" 
                    Height="30" 
                    Width="70"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,10,10,0"
                    FontSize="15"
                    BorderThickness="1"
                    BorderBrush="Gray"
                    Command="{Binding DataContext.Cancel, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:AddDataDialogs}}"
                    Style="{StaticResource PanelButton}"/>
        </Grid>
    </Grid>
</Window>
