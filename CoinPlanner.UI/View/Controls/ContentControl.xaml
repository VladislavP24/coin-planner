<UserControl x:Class="CoinPlanner.UI.View.Controls.ContentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoinPlanner.UI.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/CoinPlanner.UI;component/Styles/ContentStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Border Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="700"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Верхняя панель -->
            <Grid Grid.Row="0" Grid.ColumnSpan="2">
                <Border Grid.Row="1" Grid.RowSpan="3"
                        Grid.Column="3"
                        Margin="0"
                        Background="White" 
                        CornerRadius="0">
                    <DataGrid x:Name="NoteBookDataGrid"
                              Margin="0"
                              ItemsSource="{Binding DynamicNoteBookModelCollection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              SelectedItem="{Binding CurSelectedNoteBook, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Background="White"                      
                              BorderBrush="Black" BorderThickness="1"
                              AutoGenerateColumns="False" CanUserAddRows="False"
                              CanUserReorderColumns="False" CanUserResizeColumns="False"
                              CanUserResizeRows="False" HeadersVisibility="Column"
                              RowHeight="25"
                              GridLinesVisibility="None"
                              IsTabStop="False"
                              CanUserSortColumns="True"
                              ScrollViewer.CanContentScroll="False"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle}"
                              Cursor=""
                              CellStyle="{DynamicResource DataGridCellStyle}">

                        <DataGrid.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="Border.CornerRadius" Value="0" />
                                <Setter Property="BorderBrush" Value="#CDD0D2" />
                            </Style>
                            <Style TargetType="ScrollBar">
                                <Setter Property="Visibility" Value="Visible" />
                            </Style>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            
                            <!-- Столбец номер строки -->
                            <DataGridTemplateColumn Header="№" Width="0.13*" IsReadOnly="True" SortMemberPath="Id"
                                                    HeaderStyle="{StaticResource DataGridColumnHeaderStyle}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid HorizontalAlignment="Stretch">
                                            <TextBlock Text="{Binding Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                       Margin="3,0,0,0"
                                                       TextAlignment="Center"
                                                       Foreground="Black"
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center" 
                                                       Background="Transparent"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Стобец Наиманование -->
                            <DataGridTemplateColumn Header="Наиманование" Width="1*" SortMemberPath="LastName"
                                                    HeaderStyle="{StaticResource DataGridColumnHeaderStyle}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid HorizontalAlignment="Stretch">
                                            <TextBox Text="{Binding LastName, TargetNullValue=Пусто, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     Margin="3,0,0,0"
                                                     TextAlignment="Left"
                                                     HorizontalAlignment="Stretch" 
                                                     VerticalAlignment="Stretch"
                                                     HorizontalContentAlignment="Center" 
                                                     VerticalContentAlignment="Center"  
                                                     BorderThickness="0" 
                                                     Background="Transparent"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Столбец Вид операции -->
                            <DataGridTemplateColumn Header="Вид операции" Width="1*" SortMemberPath="FirstName"
                                                    HeaderStyle="{StaticResource DataGridColumnHeaderStyle}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid HorizontalAlignment="Stretch">
                                            <TextBox Text="{Binding FirstName, TargetNullValue=Пусто, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     HorizontalAlignment="Stretch"
                                                     VerticalAlignment="Stretch"
                                                     HorizontalContentAlignment="Center" 
                                                     VerticalContentAlignment="Center"
                                                     TextAlignment="Left"
                                                     BorderThickness="0" 
                                                     Background="Transparent"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>


                            <!-- Столбец Сумма, руб. -->
                            <DataGridTemplateColumn Header="Сумма, руб." Width="1*" SortMemberPath="SurName"
                                                    HeaderStyle="{StaticResource DataGridColumnHeaderStyle}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding SurName, TargetNullValue=Пусто, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"   
                                                 HorizontalAlignment="Stretch" 
                                                 VerticalAlignment="Stretch"
                                                 HorizontalContentAlignment="Center" 
                                                 VerticalContentAlignment="Center"
                                                 TextAlignment="Left"
                                                 Background="Transparent"
                                                 BorderThickness="0"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>


                            <!-- Столбец Выполнен -->
                            <DataGridTemplateColumn Header="Выполнен" Width="1*" SortMemberPath="SurName"
                                                    HeaderStyle="{StaticResource DataGridColumnHeaderStyle}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding SurName, TargetNullValue=Пусто, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"   
                                                 HorizontalAlignment="Stretch" 
                                                 VerticalAlignment="Stretch"
                                                 HorizontalContentAlignment="Center" 
                                                 VerticalContentAlignment="Center"
                                                 TextAlignment="Left"
                                                 Background="Transparent"
                                                 BorderThickness="0"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>


                            <!--Столбец Время -->
                            <DataGridTemplateColumn Header="Время" Width="1*" SortMemberPath="PhoneNumber"
                                                    HeaderStyle="{StaticResource DataGridColumnHeaderStyleRight}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding PhoneNumber, TargetNullValue=Пусто, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                 HorizontalAlignment="Stretch" 
                                                 VerticalAlignment="Stretch"
                                                 HorizontalContentAlignment="Center" 
                                                 VerticalContentAlignment="Center"
                                                 TextAlignment="Left"
                                                 Background="Transparent"                 
                                                 BorderThickness="0"
                                                 PreviewTextInput="TextBox_PreviewTextInput" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>

            
            <!-- Нижняя панель -->
            <Border Grid.Row="1" Background="White" BorderBrush="Black" BorderThickness="1,0,1,1">
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="50,15,0,0">
                            <TextBlock Text="Накопления:" FontSize="20" Margin="0,0,10,0"
                                   VerticalAlignment="Center"/>
                            <TextBlock Text="300.000" FontSize="20"
                                   VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="50,0,0,0">
                            <TextBlock Text="Кредит:" FontSize="20" Margin="0,0,10,0"
                                   VerticalAlignment="Center"/>
                            <TextBlock Text="10.000" FontSize="20"
                                   VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="50,0,0,15">
                            <TextBlock Text="Остаток:" FontSize="20" Margin="0,0,10,0"
                                   VerticalAlignment="Center"/>
                            <TextBlock Text="10.000" FontSize="20"
                                   VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                </Grid>
            </Border>

        </Grid>
    </Border>
</UserControl>
