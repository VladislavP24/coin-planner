<UserControl x:Class="CoinPlanner.UI.View.Controls.TemplateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoinPlanner.UI.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             >
    <Grid Background="White" MouseDown="Grid_MouseDown" Height="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" 
                   Source="/CoinPlanner.UI;component/Resources/coinplanner32.png" 
                   Height="16" 
                   Width=" 16"
                   Margin="10,0,0,2"/>

            <TextBlock  Grid.Column="1" 
                        Text="COIN PLANNER"
                        VerticalAlignment="Center"
                        FontWeight="ExtraLight" 
                        FontFamily="Courier New"
                        Margin="10,0,0,0"/>

            <Button Content="-" 
                    Grid.Column="2"  
                    Width="30" 
                    Click="MinimizeButton_Click"
                    Background="White"
                    BorderBrush="White"/>

            <Button Content="☐" 
                    Grid.Column="3"  
                    Width="30" 
                    Click="MaximizeButton_Click"
                    Background="White"
                    BorderBrush="White"/>

            <Button Content="X" 
                    Grid.Column="4"  
                    Width="30" 
                    Click="CloseButton_Click"
                    Background="White"
                    BorderBrush="White"/>
        </Grid>
</UserControl>
