<UserControl x:Class="CoinPlanner.UI.View.Controls.PanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoinPlanner.UI.View.Controls" 
             xmlns:system="clr-namespace:System;assembly=netstandard"
             mc:Ignorable="d"
             UseLayoutRounding="True"
             d:DesignHeight="170" d:DesignWidth="1820">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/CoinPlanner.UI;component/Styles/PanelStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    
    <Border Background="White" CornerRadius="10" BorderBrush="Black" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Панель Файл -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="1" Style="{StaticResource RightBorder}" HorizontalAlignment="Left">
                    <Button Width="130"
                            Height="32"
                            Margin="5,0,20,0"
                            Style="{DynamicResource PanelButton}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://application:,,,/CoinPlanner.UI;component/Resources/createfile.png" 
                                   Width="30" 
                                   Height="30" 
                                   Margin="-12,0,10,0"
                                   VerticalAlignment="Center"
                                   SnapsToDevicePixels="True"/>
                            <TextBlock Text="Создать" FontSize="15" VerticalAlignment="Center" FontWeight="Normal"/>
                        </StackPanel>
                    </Button>
                </Border>

                <Border Grid.Row="2" Style="{StaticResource RightBorder}" HorizontalAlignment="Left">
                    <Button Width="130"
                            Height="32"
                            Margin="5,0,20,0"
                            Style="{DynamicResource PanelButton}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://application:,,,/CoinPlanner.UI;component/Resources/openfile.png" 
                                   Width="30" 
                                   Height="30" 
                                   Margin="-7,0,10,0"
                                   VerticalAlignment="Center"
                                   SnapsToDevicePixels="True"/>
                            <TextBlock Text="Открыть" FontSize="15" VerticalAlignment="Center" FontWeight="Normal"/>
                        </StackPanel>
                    </Button>
                </Border>

                <Border Grid.Row="3" Style="{StaticResource RightBorder}" HorizontalAlignment="Left">
                    <Button Width="130"
                            Height="32"
                            Margin="5,0,20,0"
                            Style="{DynamicResource PanelButton}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://application:,,,/CoinPlanner.UI;component/Resources/savefile.png" 
                                   Width="30" 
                                   Height="30" 
                                   Margin="5,0,12,0"
                                   VerticalAlignment="Center"
                                   SnapsToDevicePixels="True"/>
                            <TextBlock Text="Сохранить" FontSize="15" VerticalAlignment="Center" FontWeight="Normal"/>
                        </StackPanel>
                    </Button>
                </Border>

                <TextBlock Grid.Row="4"
                           Text="Файл"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"/>
            </Grid>

            <!-- Панель Таблица 1 -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="1"
                        Width="150"
                        Height="32"
                        Margin="5,0,10,0"
                        HorizontalAlignment="Left"
                        Style="{DynamicResource PanelButton}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://application:,,,/CoinPlanner.UI;component/Resources/addtable.png" 
                               Width="30" 
                               Height="30" 
                               Margin="-35,0,10,0"
                               VerticalAlignment="Center"
                               SnapsToDevicePixels="True"/>
                        <TextBlock Text="Добавить" FontSize="15" VerticalAlignment="Center" FontWeight="Normal"/>
                    </StackPanel>
                </Button>

                <Button Grid.Row="2"
                        Width="150"
                        Height="32"
                        Margin="5,0,10,0"
                        HorizontalAlignment="Left"
                        Style="{DynamicResource PanelButton}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://application:,,,/CoinPlanner.UI;component/Resources/edittable.png" 
                               Width="30" 
                               Height="30" 
                               Margin="2,0,10,0"
                               VerticalAlignment="Center"
                               SnapsToDevicePixels="True"/>
                        <TextBlock Text="Редактировать" FontSize="15" VerticalAlignment="Center" FontWeight="Normal"/>
                    </StackPanel>
                </Button>

                <Button Grid.Row="3"
                        Width="150"
                        Height="32"
                        Margin="5,0,10,0"
                        HorizontalAlignment="Left"
                        Style="{DynamicResource PanelButton}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://application:,,,/CoinPlanner.UI;component/Resources/deletefile.png" 
                               Width="30" 
                               Height="30" 
                               Margin="-40,0,13,0"
                               VerticalAlignment="Center"
                               SnapsToDevicePixels="True"/>
                        <TextBlock Text="Удалить" FontSize="15" VerticalAlignment="Center" FontWeight="Normal"/>
                    </StackPanel>
                </Button>
                
            </Grid>

            <!-- Панель Таблица 2 -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="1" Style="{StaticResource RightBorder}" HorizontalAlignment="Left">
                    <Button Width="135"
                            Height="32"
                            Margin="0,0,10,0"
                            Style="{DynamicResource PanelButton}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://application:,,,/CoinPlanner.UI;component/Resources/enrolltable.png" 
                                   Width="30" 
                                   Height="30" 
                                   Margin="5,0,8,0"
                                   VerticalAlignment="Center"
                                   SnapsToDevicePixels="True"/>
                            <TextBlock Text="Зачисление" FontSize="15" VerticalAlignment="Center" FontWeight="Normal"/>
                        </StackPanel>
                    </Button>
                </Border>

                <Border Grid.Row="2" Style="{StaticResource RightBorder}" HorizontalAlignment="Left">
                    <Button Width="135"
                            Height="32"
                            Margin="0,0,10,0"
                            Style="{DynamicResource PanelButton}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://application:,,,/CoinPlanner.UI;component/Resources/costtable.png" 
                                   Width="30" 
                                   Height="30" 
                                   Margin="-15,0,10,0"
                                   VerticalAlignment="Center"
                                   SnapsToDevicePixels="True"/>
                            <TextBlock Text="Расходы" FontSize="15" VerticalAlignment="Center" FontWeight="Normal"/>
                        </StackPanel>
                    </Button>
                </Border>

                <Border Grid.Row="3" Style="{StaticResource RightBorder}" HorizontalAlignment="Left">
                    <Button Width="135"
                            Height="32"
                            Margin="0,0,10,0"
                            Style="{DynamicResource PanelButton}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://application:,,,/CoinPlanner.UI;component/Resources/fixationtable.png" 
                                   Width="30" 
                                   Height="30" 
                                   Margin="-10,0,12,0"
                                   VerticalAlignment="Center"
                                   SnapsToDevicePixels="True"/>
                            <TextBlock Text="Фиксация" FontSize="15" VerticalAlignment="Center" FontWeight="Normal"/>
                        </StackPanel>
                    </Button>
                </Border>
            </Grid>

            <TextBlock Grid.Column="1" 
                       Grid.ColumnSpan="2" 
                       Text="Таблица" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"/>

            <!-- Панель График -->
            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="1" Style="{StaticResource RightBorder}" HorizontalAlignment="Left">
                    <Button Width="130"
                            Height="32"
                            Margin="5,0,10,0"
                            Style="{DynamicResource PanelButton}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://application:,,,/CoinPlanner.UI;component/Resources/creategraph.png" 
                                   Width="30" 
                                   Height="30" 
                                   Margin="-15,0,10,0"
                                   VerticalAlignment="Center"
                                   SnapsToDevicePixels="True"/>
                            <TextBlock Text="Создать" FontSize="15" VerticalAlignment="Center" FontWeight="Normal"/>
                        </StackPanel>
                    </Button>
                </Border>

                <Border Grid.Row="2" Style="{StaticResource RightBorder}" HorizontalAlignment="Left">
                    <Button Width="130"
                            Height="32"
                            Margin="5,0,10,0"
                            Style="{DynamicResource PanelButton}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://application:,,,/CoinPlanner.UI;component/Resources/opengraph.png" 
                                   Width="30" 
                                   Height="30" 
                                   Margin="-10,0,10,0"
                                   VerticalAlignment="Center"
                                   SnapsToDevicePixels="True"/>
                            <TextBlock Text="Открыть" FontSize="15" VerticalAlignment="Center" FontWeight="Normal"/>
                        </StackPanel>
                    </Button>
                </Border>

                <Border Grid.Row="3" Style="{StaticResource RightBorder}" HorizontalAlignment="Left">
                    <Button Width="130"
                            Height="32"
                            Margin="5,0,10,0"
                            Style="{DynamicResource PanelButton}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://application:,,,/CoinPlanner.UI;component/Resources/savegraph.png" 
                                   Width="30" 
                                   Height="30" 
                                   Margin="5,0,12,0"
                                   VerticalAlignment="Center"
                                   SnapsToDevicePixels="True"/>
                            <TextBlock Text="Сохранить" FontSize="15" VerticalAlignment="Center" FontWeight="Normal"/>
                        </StackPanel>
                    </Button>
                </Border>

                <TextBlock Grid.Row="4"
                           Text="График"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"/>
            </Grid>

            <!-- Панель Календарь -->
            <Grid Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="1" Style="{StaticResource RightBorder}" HorizontalAlignment="Left">
                    <Button Width="130"
                            Height="32"
                            Margin="5,0,10,0"
                            Command="{Binding DataContext.Type, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:PanelControl}}"
                            Style="{DynamicResource PanelButton}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://application:,,,/CoinPlanner.UI;component/Resources/viewcalendar.png" 
                                   Width="30" 
                                   Height="30" 
                                   Margin="-40,0,10,0"
                                   VerticalAlignment="Center"
                                   SnapsToDevicePixels="True"/>
                            <TextBlock Text="Вид" FontSize="15" VerticalAlignment="Center" FontWeight="Normal"/>
                        </StackPanel>
                    </Button>
                </Border>

                <Border Grid.Row="2" Style="{StaticResource RightBorder}" HorizontalAlignment="Left">
                    <Button Width="130"
                            Height="32"
                            Margin="5,0,10,0"
                            Command="{Binding DataContext.Interval, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:PanelControl}}"
                            Style="{DynamicResource PanelButton}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://application:,,,/CoinPlanner.UI;component/Resources/intervalcalendar.png" 
                                   Width="30" 
                                   Height="30" 
                                   Margin="0,0,10,0"
                                   VerticalAlignment="Center"
                                   SnapsToDevicePixels="True"/>
                            <TextBlock Text="Интервал" FontSize="15" VerticalAlignment="Center" FontWeight="Normal"/>
                        </StackPanel>
                    </Button>
                </Border>

                <Border Grid.Row="3" Style="{StaticResource RightBorder}" HorizontalAlignment="Left">
                    <Button Width="130"
                            Height="32"
                            Margin="5,0,10,0"
                            Style="{DynamicResource PanelButton}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://application:,,,/CoinPlanner.UI;component/Resources/markcalendar.png" 
                                   Width="30" 
                                   Height="30" 
                                   Margin="5,0,12,0"
                                   VerticalAlignment="Center"
                                   SnapsToDevicePixels="True"/>
                            <TextBlock Text="Сохранить" FontSize="15" VerticalAlignment="Center" FontWeight="Normal"/>
                        </StackPanel>
                    </Button>
                </Border>

                <TextBlock Grid.Row="4"
                           Text="Календарь"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"/>
            </Grid>

            <!-- Панель Пустой грид для добавления -->
            <Grid Grid.Column="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="1" Style="{StaticResource RightBorder}"/>
                <Border Grid.Row="2" Style="{StaticResource RightBorder}"/>
                <Border Grid.Row="3" Style="{StaticResource RightBorder}"/>
            </Grid>

            <!-- Панель Планы -->
            <Grid Grid.Column="6">
                <Border Height="72" 
                        Width="92"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="20,0,20,20 "
                        BorderBrush="Black"
                        BorderThickness="1">
                    <StackPanel>
                        <Image Source="pack://application:,,,/CoinPlanner.UI;component/Resources/plan.png" 
                               Width="45" 
                               Height="45"
                               Margin="0,5,0,0"
                               SnapsToDevicePixels="True"/>
                        <TextBlock Text="План 2025"
                                   FontSize="13"
                                   Width="65"
                                   Height="14"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Bottom"/>
                    </StackPanel>
                </Border>

                <ComboBox x:Name="MyComboBox"
                          Height="15"
                          Width="92"
                          Margin="20,67,20,0"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          ItemsSource="{Binding DataContext.Items, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:PanelControl}}"
                          DisplayMemberPath="PlanName"
                          SelectedItem="{Binding DataContext.SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:PanelControl}}"
                          Style="{StaticResource CustomComboBoxStyle}"/>

                <TextBlock Grid.Row="4"
                           Text="Планы"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"/>
            </Grid>
        </Grid>
    </Border>


</UserControl>
